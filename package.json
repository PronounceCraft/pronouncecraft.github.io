{
  "name": "kokoro-web",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "rm -rf ./build && npm run openapigen && vite build",
    "build:static": "ADAPTER=static npm run build",
    "dev": "npm run openapigen && vite dev --host 0.0.0.0",
    "preview": "npm run openapigen && vite preview",
    "prepare": "svelte-kit sync || echo ''",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "openapigen": "node ./scripts/generate-openapi.mjs",
    "fmt": "prettier . --write",
    "test": "vitest run"
  },
  "dependencies": {
    "@ffmpeg/ffmpeg": "0.12.15",
    "@ffmpeg/util": "0.12.2",
    "espeak-ng": "1.0.2",
    "fluent-ffmpeg": "2.1.3",
    "onnxruntime-node": "1.20.1",
    "onnxruntime-web": "1.21.0-dev.20250206-d981b153d3",
    "openai": "4.85.4",
    "wavefile": "11.0.0",
    "wavesurfer.js": "7.9.1",
    "zod": "3.24.2",
    "zod-validation-error": "3.4.0"
  },
  "devDependencies": {
    "@sveltejs/adapter-node": "5.2.12",
    "@sveltejs/adapter-static": "3.0.8",
    "@sveltejs/kit": "2.17.1",
    "@sveltejs/vite-plugin-svelte": "5.0.3",
    "@tailwindcss/vite": "4.0.6",
    "@types/fluent-ffmpeg": "2.1.27",
    "daisyui": "5.0.0-beta.8",
    "lucide-svelte": "0.475.0",
    "prettier": "3.5.0",
    "prettier-plugin-svelte": "3.3.3",
    "prettier-plugin-tailwindcss": "0.6.11",
    "svelte": "5.19.10",
    "svelte-check": "4.1.4",
    "swagger-jsdoc": "6.2.8",
    "tailwindcss": "4.0.6",
    "typescript": "5.7.3",
    "vite": "6.1.0",
    "vitest": "3.0.5",
    "wrangler": "3.110.0"
  }
}
