{
    "name": "Factorial Calculator",
    "description": "A simple app to calculate the factorial of a number using Flask.",
    "version": "1.0.0",
    "dependencies": {
        "python": ">=3.8",
        "pip": true,
        "libraries": [
            "flask"
        ]
    },
    "commands": {
        "install": [
            "pip install flask"
        ],
        "run": [
            "python app.py"
        ]
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/yourusername/factorial-calculator"
    }
}
